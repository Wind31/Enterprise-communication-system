               Grid.Row="6" Height="40" VerticalAlignment="Top" FontSize="15"
               Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="lbPhone"  Margin="10"
               Grid.Row="7" Height="40" VerticalAlignment="Top" FontSize="15"
               Grid.Column="1" Grid.ColumnSpan="2"/>
