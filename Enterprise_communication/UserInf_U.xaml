            <RowDefinition Height ="2* "></RowDefinition>
            <RowDefinition Height ="0.3*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="*"></RowDefinition>
            <RowDefinition Height ="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" Auto" MinWidth="150.667"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="158"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="356.667"></ColumnDefinition>
